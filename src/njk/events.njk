{% extends '_templates/base.njk' %}

{% block page_title %}Events{% endblock %}
{% block content %}
<div class="container">
<div class="row">
  <div class="col-lg-6 col-md-5 col-sm-4 offset-md-3">
    <h1 id="story-title" class="text-center">Austin Happenings and Whatnot</h1>
  </div>
</div>
</div>
  <hr class="bg-dark border-2 border-top border-dark m-3">
<div style="overflow-x:auto;">
  <table class="table mx-3">
    <thead class="table-dark">
      <tr>
        <th scope="col">Event</th>
        <th scope="col">Description</th>
        <th scope="col">Location</th>
        <th scope="col">Time</th>
        <th scope="col">Link</th>
      </tr>
    </thead>
    <tbody>
      {% for events in events.events %}
      <tr>
        <th scope="row">{{ events.event }}</th>
        <td>{{ events.blurb }}</td>
        <td>{{ events.location }}</td>
        <td>{{ events.date }}</td>
        <td>{{ events.source }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
<hr class="bg-dark border-2 border-top border-dark m-3">
<div class="row">
  <div class="col-lg-6 col-md-5 col-sm-4 offset-md-3">
    <h1 id="story-title" class="text-center">Stay up to date on all things Austin!</h1>
  </div>
</div>
<div class="container">
  <div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">Email address</label>
  <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
</div>
<div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label">Message Here</label>
  <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
</div>
{% endblock %}